<p id="notice"><%= notice %></p>

<h1>Rates</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Song</th>
      <th>Favorite</th>
      <th>Num rate</th>
      <th>Avg rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rates.each do |rate| %>
      <tr>
        <td><%= rate.user %></td>
        <td><%= rate.song %></td>
        <td><%= rate.favorite %></td>
        <td><%= rate.num_rate %></td>
        <td><%= rate.avg_rate %></td>
        <td><%= link_to 'Show', rate %></td>
        <td><%= link_to 'Edit', edit_rate_path(rate) %></td>
        <td><%= link_to 'Destroy', rate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

